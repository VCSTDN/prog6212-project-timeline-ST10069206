<Window x:Class="ProjectTimelineGroup2.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectTimelineGroup2.Views"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="500">
    <Grid>
        <TextBox x:Name="txtEmpNo" HorizontalAlignment="Left" Margin="232,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblEmpNo" Content="Employee No" HorizontalAlignment="Left" Margin="99,36,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblPassword" Content="Password" HorizontalAlignment="Left" Margin="121,94,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.031,0.406"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="264,158,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.136,0.616" Height="23" Width="56" Click="btnLogin_Click"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="232,94,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
